<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="RegisterActivity"
    android:background="@drawable/registerbc">

    <Button
        android:id="@+id/register_back"
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:background="@drawable/register_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="50sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:src="@drawable/register_name" />


            <EditText
                android:id="@+id/register_account"
                android:layout_width="150dp"
                android:layout_gravity="center_vertical"
                android:layout_height="60dp"
                android:layout_marginLeft="100dp"
                android:background="@null"
                android:textColor="@color/cardview_light_background"
                android:layout_weight="1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:src="@drawable/rigister_code1" />

            <EditText
                android:id="@+id/register_password"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginLeft="100dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:background="@null"
                android:textColor="@color/cardview_light_background"
                android:inputType="textPassword" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:src="@drawable/register_code2" />


            <EditText
                android:id="@+id/register_rewrite_password"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginLeft="100dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:background="@null"
                android:textColor="@color/cardview_light_background"
                android:inputType="textPassword" />
        </RelativeLayout>

        <Button
            android:id="@+id/register"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/register_icon" />

    </LinearLayout>

</LinearLayout>
